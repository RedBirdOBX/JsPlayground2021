@page

@model JsPlayground.Pages.jquery.traversing.PrevModel

@{
    string pageId = "prev()";
    Layout = "~/Pages/Shared/_PageLayout.cshtml";
}

@{
    ViewData["Title"] = pageId;
}

@section LibraryHeader {jQuery}
@section PageName {@pageId}

@section Menu
{
    <partial name="_JQueryMenu" />
}

<p>
    The <code>prev()</code> method returns the <strong>previous</strong> sibling element of the selected element.
</p>

<p class="text-center"><button type="button" id="btnDemo" class="btn btn-lg btn-success">Previous</button></p>

<ul>
    <li>list item 1</li>
    <li>list item 2</li>
    <li class="third-item">list item 3</li>
    <li>list item 4</li>
    <li>list item 5</li>
</ul>

<pre>
<code>
$("#btnDemo").click(function ()
{
    $("li.third-item").prev().css({ "font-weight": "bold", "color": "red" });
});
</code>
</pre>

<p>&nbsp;</p>

<p>&nbsp;</p>


@section Scripts
{
    <script>
        $("#btnDemo").click(function () {
            $("li.third-item").prev().css({ "font-weight": "bold", "color": "red" });
        });
    </script>
}