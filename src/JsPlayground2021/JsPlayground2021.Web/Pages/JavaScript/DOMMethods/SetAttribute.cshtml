@page

@using JsPlayground2021.Web.Data.Enums
@using JsPlayground.Pages.Javascript.DOMMethods

@{
    Layout = "~/Pages/Shared/_PageLayout.cshtml";
}

@{
    ViewData["Title"] = "Set Attribute";
}

@model JsPlayground.Pages.Javascript.DOMMethods.SetAttributeModel

@section LibraryHeader {JavaScript}
@section PageName {Set Attribute}

@section Menu
{
    <partial name="_MenuContainer" model="MenuType.Javascipt" />
}

<p>
    Here's an example of how to use the <code>setAttribute()</code> method to change an element's attribute value.
</p>

<hr />

<div>
    <h4 id="demo1">Hello World</h4>
</div>

<hr />

<pre>
<code>
document.getElementById("demo1").setAttribute("class", "text-danger")
            </code>
        </pre>

<p>&nbsp;</p>

@section Scripts
{
    <script>
        document.getElementById("demo1").setAttribute("class", "text-danger")
    </script>
}
