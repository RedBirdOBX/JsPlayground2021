@page

@model JsPlayground.Pages.Javascript.Strings.SubstringModel

@{
    string pageId = "Substring";
    Layout = "~/Pages/Shared/_PageLayout.cshtml";
}

@{
    ViewData["Title"] = pageId;
}

@section LibraryHeader {JavaScript}
@section PageName {@pageId}

@section Menu
{
    <partial name="_JavaScriptMenu" />
}

<p>
    <code>substring()</code> is similar to <code>slice()</code>. The difference is that <code>substring()</code> cannot accept negative indexes.
</p>

<code>substring({start index}, {end index});</code>

<div class="card text-white bg-info mt-5">
    <div class="card-body">
        <div id="demo1"></div>
    </div>
</div>

<pre>
<code>
let string = "Apple, Banana, Kiwi";
let results = string.substring(7, 13);
document.getElementById("demo1").innerHTML = results;
</code>
</pre>

<p>&nbsp;</p>

<p>&nbsp;</p>

@section Scripts
{
    <script>
        window.onload = function () {
            let string = "Apple, Banana, Kiwi";
            let results = string.substring(7, 13);
            document.getElementById("demo1").innerHTML = results;
        }
    </script>
}
