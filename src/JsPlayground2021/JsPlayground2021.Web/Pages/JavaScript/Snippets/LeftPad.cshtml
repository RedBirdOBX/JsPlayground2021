@page

@using JsPlayground2021.Web.Data.Enums
@using JsPlayground.Pages.Javascript.Snippets

@model JsPlayground.Pages.Javascript.Snippets.LeftPadModel

@{
    string pageId = "LeftPad";
    Layout = "~/Pages/Shared/_PageLayout.cshtml";
}

@{
    ViewData["Title"] = pageId;
}

@section LibraryHeader {JavaScript}
@section PageName {@pageId}

@section Menu
{
    <partial name="_MenuContainer" model="MenuType.Javascipt" />
}



<pre>
<code>
let totalTime = 120;
let minutes = Math.floor(totalTime / 60);
let seconds = totalTime - (minutes * 60);
let secondsPadded = (seconds < 10) ? `0${seconds}` : `${seconds}`;

let minutesLabel = document.getElementById("minutes");
let secondsLabel = document.getElementById("seconds");
minutesLabel.innerHTML = minutes;
secondsLabel.innerHTML = secondsPadded;
</code>
</pre>

<div class="card text-white bg-info mt-5">
    <div class="card-body">
        <span id="minutes"></span>:<span id="seconds"></span>
    </div>
</div>

<p>&nbsp;</p>


@section Scripts
{
    <script>
        let totalTime = 120;
        let minutes = Math.floor(totalTime / 60);
        let seconds = totalTime - (minutes * 60);
        let secondsPadded = (seconds < 10) ? `0${seconds}` : `${seconds}`;
        let minutesLabel = document.getElementById("minutes");
        let secondsLabel = document.getElementById("seconds");
        minutesLabel.innerHTML = minutes;
        secondsLabel.innerHTML = secondsPadded;
    </script>
}

